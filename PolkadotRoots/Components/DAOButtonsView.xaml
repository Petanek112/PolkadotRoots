<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolkadotRoots.Components.DAOButtonsView"
             xmlns:buttons="clr-namespace:PlutoFramework.Components.Buttons;assembly=PlutoFramework">

    <Border StrokeThickness="1"
            Stroke="{StaticResource Primary}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <buttons:ElevatedButton Text="Create DAO"
                                    Command="{Binding CreateDAOButtonPressedCommand}"
                                    Grid.Column="0"
                                    CornerRadius="0"/>
            
            <buttons:ElevatedButton Text="Join DAO"
                                    Command="{Binding JoinDAOButtonPressedCommand}"
                                    Grid.Column="1"
                                    CornerRadius="0"/>
        </Grid>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{StaticResource ButtonCornerRadius}"
                            x:Name="roundRectangle"/>

        </Border.StrokeShape>
    </Border>
</ContentView>
